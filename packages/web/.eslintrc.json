{
  "plugins": ["react-hooks", "sonarjs"],
  "extends": [
    "plugin:react/recommended",
    "plugin:sonarjs/recommended",
    "prettier/react"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "linkComponents": [
      { "name": "Link", "linkAttribute": "to" },
      { "name": "NavLink", "linkAttribute": "to" }
    ]
  }
}
