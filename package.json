{
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "build": "tsc -b packages && lerna run --scope @ka/web build",
    "clean": "lerna run clean",
    "dev": "concurrently \"tsc -b packages -w --preserveWatchOutput\" \"lerna run dev --stream\" \"haproxy -f local-haproxy.cfg\"",
    "lint": "lerna run lint",
    "serve": "concurrently \"lerna run serve\" \"haproxy -f local-haproxy.cfg\"",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
