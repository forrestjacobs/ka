{
  "name": "ka",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "concurrently": "^4.1.0",
    "jest": "^24.4.0",
    "lerna": "^3.4.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "build": "tsc -b packages && lerna run --scope @ka/web build",
    "clean": "lerna run clean",
    "dev:rest": "concurrently \"tsc -b packages -w --preserveWatchOutput\" \"lerna run dev --scope @ka/rest --stream\"",
    "dev:web": "lerna run dev --scope @ka/web --stream",
    "lint": "lerna run lint",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
