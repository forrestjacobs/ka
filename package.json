{
  "name": "ka",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.8.0",
    "concurrently": "^4.1.0",
    "dotenv-cli": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "jest": "^24.4.0",
    "jest-fetch-mock": "^2.1.1",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "build": "yarn run build:project && yarn run build:web",
    "build:project": "tsc -b packages",
    "build:web": "yarn workspace @ka/web run build",
    "clean": "rimraf character.sql coverage packages/*/{dist,lib,tsconfig.tsbuildinfo,yarn-error.log} yarn-error.log",
    "dev": "concurrently \"yarn run dev:build:project\" \"yarn run dev:serve:rest\" \"yarn run dev:serve:web\"",
    "dev:build:project": "tsc -b packages -w --preserveWatchOutput",
    "dev:serve:rest": "dotenv -- yarn workspace @ka/rest run dev",
    "dev:serve:web": "dotenv -- yarn workspace @ka/web run dev",
    "format": "prettier --write \"packages/*/src/**/*.{js,json,ts,tsx}\" \"packages/*/*.{js,json}\" \"packages/*.{js,json}\" \"*.{js,json}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "workspaces": [
    "packages/*"
  ]
}
